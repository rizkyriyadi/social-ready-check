rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Circle images (avatars, etc.)
    match /circle_images/{circleId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() 
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Circle media (chat images, videos)
    match /circle_media/{channelId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && request.resource.size < 50 * 1024 * 1024;  // Max 50MB
    }
    
    // DM media (direct message images, videos)
    match /dm_media/{channelId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && request.resource.size < 50 * 1024 * 1024;  // Max 50MB
    }
    
    // User profile images
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType.matches('image/.*');
    }
  }
}
